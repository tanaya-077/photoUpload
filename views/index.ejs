<% layout('layouts/boilerplate') %>
<style>

body {
    background-color:#F8E7F6;
    font-family: Arial, sans-serif;
  }

  h1 {
    color: #4B164C;
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 2rem;
    text-align: center;
  }


</style>
<h1  class="mt-4">Photos</h1>

<% if (currentUser) { %>
  <a href="/photos/new" class="btn btn-primary mb-4">Upload New Photo</a>
<% } %>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% photos.forEach(photo => { %>
    <% if (currentUser && photo.uploadedBy.equals(currentUser._id)) { %>

    <div class="col">
      <div class="card h-100">
        <img src="<%= photo.image.url %>" class="card-img-top" alt="<%= photo.title %>" style="height: 20rem;">
        <div class="card-body">
          <h5 class="card-title"><%= photo.title %></h5>
          <p class="card-text">
            <small class="text-muted">Uploaded by: <b><%= photo.uploadedBy.username %></b> </small>
          </p>
          <a href="/photos/<%= photo._id %>" class=" btn btn-com">View Details</a>
        </div>
      </div>
    </div>
    <% } %>

  <% }) %>
</div>